{
    "compilerOptions": {
        "outDir": "build",
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2019",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}