{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
    }
}